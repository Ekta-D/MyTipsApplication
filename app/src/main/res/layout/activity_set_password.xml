<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mytips.SetPassword">

    <TextView
        android:id="@+id/textview_passcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:hint="Old Password"
        android:padding="10dp"
        android:text="@string/textview_setpasscode"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/old_passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_passcode"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:ems="10"
        android:focusable="true"
        android:hint="Old Password"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:visibility="gone" />


    <EditText
        android:id="@+id/editText_passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/old_passcode"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:ems="10"
        android:focusable="true"
        android:hint="Password"
        android:gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5"
            android:text="Cancel" />


        <Button
            android:id="@+id/continue_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5"
            android:enabled="false"
            android:text="Continue" />

    </LinearLayout>


</RelativeLayout>
