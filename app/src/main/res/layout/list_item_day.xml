<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
   >

    <RelativeLayout
        android:id="@+id/layout_summery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/layout_date"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_date"
                android:layout_centerHorizontal="true"
                android:text="Sept" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray"
            android:layout_toRightOf="@id/layout_date"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingTop="8dp"
            android:layout_toRightOf="@id/layout_date">

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Supervisor - The Club" />

            <ImageView
                android:id="@+id/time"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/tv_profile_name"
                android:src="@drawable/ic_clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_profile_name"
                android:layout_toRightOf="@id/time"
                android:layout_marginLeft="2dp"
                android:textSize="13dp"
                android:id="@+id/working_hours"
                android:text="Work Hours" />
        </RelativeLayout>

        <!--<ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_call" />-->

    </RelativeLayout>
<!--    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/layout_summery"
        android:background="@android:color/darker_gray"/>-->
    <LinearLayout
        android:layout_below="@id/layout_summery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="5.2">

        <RelativeLayout
            android:id="@+id/layout_tips"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tips"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_tips"
                android:textSize="12sp"
                android:text="Live Tips" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tds"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tds"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tds"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:text="Tournaments" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tip_out"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tip_out"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tip_out"
                android:textSize="12sp"
                android:text="Tip-out" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_hourly"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hourly"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hourly"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:text="Hourly Wage" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_total"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:text="75" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_total"
                android:text="Total" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>